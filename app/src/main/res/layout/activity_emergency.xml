        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/Card9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_rowWeight="1"
