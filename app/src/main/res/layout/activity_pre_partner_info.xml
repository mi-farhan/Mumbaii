<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.mumbai.PrePartnerInfo">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:hint="Your Name"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:hint="Your Email"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"/>

    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        android:hint="City You Visiting"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/email"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:background="@drawable/btn_filled"
        android:layout_below="@+id/city"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alreadyFilled"
        android:text="ALREADY FILLED THIS ?"
        android:textColor="@color/white"
        android:layout_below="@+id/btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:onClick="dialog"/>

</RelativeLayout>
